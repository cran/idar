citEntry(entry = "Article",
  title        = "Individual species affect plant traits structure in their surroundings: evidences of functional mechanisms of assembly",
  author       = personList(as.person("Julia Chacon-Labella"),
                   as.person("Marcelino de la Cruz"),
                   as.person("Adrian Escudero")),
  journal      = "Oecologia",
  year         = "2016",
  volume       = "180",
  number       = "4",
  pages        = "975--987 ",
  url          = "http://dx.doi.org/10.1007/s00442-016-3547-z",

  textVersion  =
  paste("Julia Cacon-Labella, Marcelino de la Cruz, Adrian Escudero (2016).",
        "Individual species affect plant traits structure in their surroundings: evidences of functional mechanisms of assembly",
        "Oecologia, 180(4), 975-987.",
        "URL http://dx.doi.org/10.1007/s00442-016-3547-z."))

